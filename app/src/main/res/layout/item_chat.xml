<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_65sdp"
    android:id="@+id/constParent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/img_profile"
    android:layout_width="@dimen/_60sdp"
    android:layout_height="@dimen/_60sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="@dimen/_10sdp"
    android:src="@color/text_color_b"
    ></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/txt_namegrupe"
        android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:maxLines="1"
    android:text="name"
    android:textColor="@color/text_color_b"
    android:textSize="@dimen/text_size"
    android:layout_marginTop="@dimen/_10sdp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="@dimen/_5sdp"
    app:layout_constraintRight_toLeftOf="@+id/img_profile"></TextView>
    <TextView
        android:id="@+id/txt_lastMessaage"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="40"
        android:text="name"
        android:textColor="@color/text_color_b"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/txt_namegrupe"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintRight_toLeftOf="@+id/img_profile"></TextView>
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:text="22:20"
        android:textColor="@color/text_color_b"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
      app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
        android:padding="@dimen/_3sdp"
        android:background="@drawable/shape_circel_backgeraund_succse"
        android:id="@+id/txt_badeg"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="3"
        android:gravity="center"

        android:textColor="@color/text_color_w"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_2sdp"
        app:layout_constraintLeft_toRightOf="@+id/txt_time"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>