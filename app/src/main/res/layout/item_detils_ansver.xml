<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layoutDirection="rtl"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_margin="@dimen/_1sdp"
                       android:background="#f2f4f9"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="عکس"
                       android:padding="@dimen/_10sdp"
                       android:layout_width="match_parent"></TextView>
                   <de.hdodenhof.circleimageview.CircleImageView
                     android:layout_gravity="center"
                       android:layout_width="@dimen/_70sdp"
                       android:layout_height="@dimen/_70sdp"
                       android:src="@drawable/ic_microphone"
                       android:id="@+id/img"
                       ></de.hdodenhof.circleimageview.CircleImageView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_margin="@dimen/_1sdp"
                       android:background="#f2f4f9"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="نام و نام خانوادگی"
                       android:padding="@dimen/_10sdp"
                       android:layout_width="match_parent"></TextView>
                   <TextView
                       android:id="@+id/txtname"
                       android:layout_margin="@dimen/_1sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text=""
                       android:padding="@dimen/_10sdp"
                       android:layout_width="wrap_content"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_margin="@dimen/_1sdp"
                       android:background="#f2f4f9"
                       android:minWidth="@dimen/_40sdp"
                       android:maxWidth="@dimen/_40sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text="نتیجه"
                       android:padding="@dimen/_10sdp"
                       android:layout_width="match_parent"></TextView>
                   <TextView
                       android:id="@+id/txtresulr"
                       android:minWidth="@dimen/_40sdp"
                       android:maxWidth="@dimen/_40sdp"
                       android:layout_margin="@dimen/_1sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text=""
                       android:padding="@dimen/_10sdp"
                       android:layout_width="wrap_content"></TextView>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:layout_margin="@dimen/_1sdp"
                       android:background="#f2f4f9"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text=" توضیحات"
                       android:padding="@dimen/_10sdp"
                       android:layout_width="match_parent"></TextView>
                   <TextView
                       android:id="@+id/txt_des"
                       android:layout_margin="@dimen/_1sdp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:singleLine="true"
                       android:text=" "
                       android:padding="@dimen/_10sdp"
                       android:layout_width="wrap_content"></TextView>
               </LinearLayout>
           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/_1sdp"
                    android:background="#f2f4f9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="از"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
                <TextView
                    android:layout_margin="@dimen/_1sdp"
android:id="@+id/txtdatestart"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
                <TextView

                    android:layout_margin="@dimen/_1sdp"
                    android:background="#f2f4f9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="  تا"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
                <TextView
                    android:layout_margin="@dimen/_1sdp"
android:id="@+id/txtdate_end"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/_1sdp"
                    android:background="#f2f4f9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="وضعیت"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
                <TextView
                    android:layout_margin="@dimen/_1sdp"
android:id="@+id/txt_type"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
                <TextView

                    android:layout_margin="@dimen/_1sdp"
                    android:background="#f2f4f9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="  عملیات"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"></TextView>
               <Button
                   android:id="@+id/btn_see"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="مشاهده"></Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>