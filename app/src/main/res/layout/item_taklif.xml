<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_85sdp">
    <RelativeLayout
        android:rotation="-30"
        android:background="@color/text_color_sucsses"
      android:layout_marginLeft="-50dp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_width="150dp"
        android:layout_height="@dimen/_20sdp">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/txt_stucion"

            android:layout_margin="@dimen/_3sdp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:layout_width="@dimen/_100sdp"
            android:singleLine="true"
            android:textColor="@color/mdtp_white"
            android:layout_height="match_parent"
            android:text=" ارسال "
            ></TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_mohlatarsal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_3sdp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="مهلت ارسال :"
        ></TextView>
    <TextView
        android:id="@+id/txttitel"
      android:layout_below="@+id/txt_mohlatarsal"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_3sdp"
        android:layoutDirection="rtl"
        android:textStyle="bold"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="مهلت ارسال :"
        ></TextView>
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:text="ارسال"
        android:layout_alignParentBottom="true"></Button>
</RelativeLayout>
</androidx.cardview.widget.CardView>