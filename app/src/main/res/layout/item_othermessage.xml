<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="rtl"
    android:layout_gravity="left"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:id="@+id/Rel"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_risive_message"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_gravity="left"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:id="@+id/imgpopup"
            android:rotation="90"
            android:src="@drawable/ic_popup"
            ></ImageView>
        <RelativeLayout
android:layout_gravity="left"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/shap_namesender"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView

                android:id="@+id/txtnamesender"
                android:textSize="@dimen/_6sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دانش اموز: دانش اموز تستتی">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_parent"
            android:layout_width="match_parent"
            android:background="@drawable/shape_for_parent_forother"
            android:layout_margin="@dimen/_5sdp"
            android:paddingStart="@dimen/_9sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_height="@dimen/_35sdp">
            <TextView
                android:singleLine="true"
                android:id="@+id/txtparentname"
                android:layout_marginRight="@dimen/_6sdp"
                android:textColor="#38ddb7"
                android:textSize="@dimen/_9sdp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نام دانش اموز:jak"
                ></TextView>
            <TextView
                android:singleLine="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@+id/txtparentname"
                android:id="@+id/txt_sumrytextparents"
                android:layout_marginRight="@dimen/_6sdp"
                android:textColor="#717171"
                android:textSize="@dimen/_9sdp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نام دانش اموز:jak"
                ></TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lin_text"
            android:visibility="gone"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:textColor="@color/text_color_b"
                android:text="slam khobi">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_img"
            android:visibility="gone"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_shower"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                ></ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_audeo"
            android:visibility="gone"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_video"
            android:visibility="gone"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <LinearLayout
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp">
            <ImageView
                android:layout_marginLeft="@dimen/_6sdp"
                android:src="@drawable/see"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"></ImageView>
            <TextView
                android:id="@+id/txt_countsee"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/_8sdp"
                android:textColor="#666666"
                android:text="0"></TextView>

            <TextView
                android:gravity="center"
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_7sdp"
                android:singleLine="true"
                android:text="22:15"
                android:textColor="#666666"
                android:textSize="@dimen/_8sdp"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>